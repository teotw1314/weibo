<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="app_theme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorControlNormal">@android:color/white</item>
    </style>

    <style name="app_theme_transparent" parent="@style/app_theme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#00000000</item>
        <item name="colorPrimaryDark">#00000000</item>
        <item name="colorAccent">#00000000</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorControlNormal">@android:color/white</item>
    </style>

    <style name="lib_common_toolbar_title">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="lib_common_toolbar_subtitle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="lib_common_no_action_bar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppLightThemes" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="lib_common_text_timeline_name">
        <item name="android:textSize">@dimen/text_size_timeline_name</item>
        <item name="android:textColor">@color/text_color_timeline_name</item>
    </style>

    <style name="lib_common_text_timeline_time">
        <item name="android:textSize">@dimen/text_size_timeline_time</item>
        <item name="android:textColor">@color/text_color_timeline_time</item>
    </style>

    <style name="lib_common_text_timeline_from">
        <item name="android:textSize">@dimen/text_size_timeline_from</item>
        <item name="android:textColor">@color/text_color_timeline_from</item>
        <item name="android:paddingLeft">20dp</item>
    </style>

    <style name="lib_common_divider_timeline">
        <item name="android:layout_height">10dp</item>
        <item name="android:background">@color/divider_color_1</item>
    </style>

</resources>
